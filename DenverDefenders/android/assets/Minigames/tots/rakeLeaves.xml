	<!-- win and lose conditions -->
	<win>
		<cond val="destroy1" />
		<cond val="destroy2" />
		<cond val="destroy3" />
		<cond val="destroy4" />
		<cond val="destroy5" />
		<cond val="destroy6" />
	</win>

	<lose>
		<cond val="never" />
	</lose>
</level>