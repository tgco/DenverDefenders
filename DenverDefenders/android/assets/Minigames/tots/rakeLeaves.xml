<level name="Rake the leaves" background="grass.png" description="Tap leaves to rake them up!">
	<!-- leaves -->
	<object id="1" image="leaves.png" x="rand_100_900" y="rand_100_500">
		<continuous>
			<att type="screencheck" side="bottom" throws="destroy1" />
			<att type="moves" vx="0" vy="0" ax="0" ay="0" />
			<att type="catch_touch" throws="touch1" />
		</continuous>
		<triggered>
			<att type="set_velocity" vy="-700" on="touch1" />
		</triggered>
	</object>
