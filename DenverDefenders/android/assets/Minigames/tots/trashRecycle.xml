	<!-- trash can -->
	<object id="11" image="trashcan.png" x="300" y="10">
		<continuous>
			<att type="collides" with="0,1,2,3,4,5" />
		</continuous>
	</object>
	<!-- recycle can -->
	<object id="12" image="recyclecan.png" x="600" y="10">
		<continuous>
			<att type="collides" with="0,1,2,3,4,5" />
		</continuous>
	</object>

	<!-- win and lose conditions -->
	<win>
		<cond val="destroy0" />
		<cond val="destroy1" />
		<cond val="destroy2" />
		<cond val="destroy3" />
		<cond val="destroy4" />
