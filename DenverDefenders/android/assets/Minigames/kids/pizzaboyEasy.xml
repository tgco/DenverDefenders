	<object id="-2" image="../LevelBackgrounds/road.png" x="0" y="0" >
		<continuous>
			<att type="moves" vx="-600" />
			<att type="screencheck" side="left" throws="tile1left" />
		</continuous>
		<triggered>
			<att type="set_position" x="1024" on="tile1left" />
		</triggered>
	</object>
