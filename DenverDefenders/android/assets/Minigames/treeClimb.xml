<level name="tree climb" time="10" background="null.png" description="Tap to climb the tree!">
	<!-- a "stopper" that prevents the treetop tile from scrolling too far -->
	<object id="-1" image="null.png" x="0" y="25" >
		<continuous>
			<att type="collides" with="4" />
		</continuous>
	</object>
	<!-- 4 tree tiles and a tree top tile that scroll down with tap -->
	<object id="0" image="../LevelBackgrounds/trunk.png" x="0" y="0">
		<triggered>
			<att type="move_by" dy="-50" on="touch" />
		</triggered>
	</object>
	<object id="1" image="../LevelBackgrounds/trunk.png" x="0" y="600">
		<triggered>
			<att type="move_by" dy="-50" on="touch" />
		</triggered>
	</object>
	<object id="2" image="../LevelBackgrounds/trunk.png" x="0" y="1200">
		<triggered>
			<att type="move_by" dy="-50" on="touch" />
		</triggered>
	</object>
	<object id="3" image="../LevelBackgrounds/trunk.png" x="0" y="1800">
		<triggered>
			<att type="move_by" dy="-50" on="touch" />
		</triggered>
	</object>

	<object id="4" image="../LevelBackgrounds/treetop.png" x="0" y="2400">
		<triggered>
			<att type="move_by" dy="-50" on="touch" />
			<att type="set_position" y="0" on="collide_-1_4" />
			<att type="freeze" on="collide_-1_4" throws="win" />
		</triggered>
	</object>

	<!-- win/lose -->
	<win>
		<cond val="win" />
	</win>

	<lose>
		<cond val="timeout" />
	</lose>
</level>