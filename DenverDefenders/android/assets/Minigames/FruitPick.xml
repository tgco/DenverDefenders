<level name="Fruit Pick" background="trees.jpg" description="Tap the fruit to pick it off the tree!">
	<!-- Fruit -->
	<object id="0" image="Apple1.png" imageScale="3.5" x="rand_100_900" y="rand_400_500" >
		<continuous>
			<att type="floor" y="50" throws="floor0" />
			<att type="moves" vx="0" vy="0" ax="0" ay="0" />
			<att type="catch_touch" throws="touch0" />
		</continuous>
		<triggered>
			<att type="set_velocity" vy="-700" on="touch0" />
		</triggered>
	</object>
