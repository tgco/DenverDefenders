<level name="Salad" background="Table.png" description="Move the healthy foods to the bowl!">
	<!-- Good food -->
	<object id="0" image="Watermellon1.png" x="rand_100_900" y="rand_10_500">
		<triggered>
			<att type="destroy" on="collide_10_0" throws="destroy0" />
		</triggered>
		<input type="draggable" x="true" y="true" />
	</object>
	<object id="1" image="Cherry.png" x="rand_100_900" y="rand_10_500">
		<triggered>
			<att type="destroy" on="collide_10_1" throws="destroy1" />
		</triggered>
		<input type="draggable" x="true" y="true" />
	</object>
	<object id="2" image="Apple1.png" x="rand_100_900" y="rand_10_500">
		<triggered>
			<att type="destroy" on="collide_10_2" throws="destroy2" />
		</triggered>
		<input type="draggable" x="true" y="true" />
	</object>
	<object id="3" image="Banana1.png" x="rand_100_900" y="rand_10_500">
		<triggered>
			<att type="destroy" on="collide_10_3" throws="destroy3" />
		</triggered>
		<input type="draggable" x="true" y="true" />
	</object>
	<object id="4" image="Grape.png" x="rand_100_900" y="rand_10_500">
		<triggered>
			<att type="destroy" on="collide_10_4" throws="destroy4" />
		</triggered>
		<input type="draggable" x="true" y="true" />
	</object>
	<object id="5" image="Kiwi.png" x="rand_100_900" y="rand_10_500">
		<triggered>
			<att type="destroy" on="collide_10_5" throws="destroy5" />
		</triggered>
		<input type="draggable" x="true" y="true" />
	</object>

	<!-- Bad food -->
	<object id="6" image="Sundae1.png" x="rand_100_900" y="rand_200_500">
		<triggered>
			<att type="destroy" on="collide_10_6" throws="lose" />
		</triggered>
		<input type="draggable" x="true" y="true" />
	</object>
	<object id="7" image="Lollipop2.png" x="rand_100_900" y="rand_200_500">
		<triggered>
			<att type="destroy" on="collide_10_7" throws="lose" />
		</triggered>
		<input type="draggable" x="true" y="true" />
	</object>
	<object id="8" image="Candy2.png" x="rand_100_900" y="rand_200_500">
		<triggered>
			<att type="destroy" on="collide_10_8" throws="lose" />
		</triggered>
		<input type="draggable" x="true" y="true" />
	</object>

	<!-- Bowl -->
	<object id="10" image="bowl.png" x="500" y="100">
		<continuous>
			<att type="collides" with="0,1,2,3,4,5,6,7,8" />
		</continuous>
	</object>

	<!-- win and lose conditions -->
	<win>
		<cond val="destroy0" />
		<cond val="destroy1" />
		<cond val="destroy2" />
		<cond val="destroy3" />
		<cond val="destroy4" />
		<cond val="destroy5" />
	</win>

	<lose>
		<cond val="lose" />
	</lose>
</level>